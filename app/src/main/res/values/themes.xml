<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Eventos" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_xd</item>
        <item name="colorPrimaryVariant">@color/blue_xd</item>
        <item name="colorOnPrimary">@color/white_xd</item>
        <item name="colorAccent">@color/white_xd</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blue_xd</item>
        <item name="colorPrimaryVariant">@color/blue_xd</item>
        <item name="android:textColorHint">@color/white_xd</item>
        <item name="colorAccent">@color/white_xd</item>
        <item name="android:textColorPrimary">@color/white_xd</item>
        <item name="android:textColorSecondary">@color/white_xd</item>
        <item name="android:textColor">@color/blue_xd</item>
    </style>

    <style name="TextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/border_text_fields_material</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#707070</item>
        <item name="android:textColorHint">@color/blue_xd</item>
    </style>

    <style name="SelectionColor">
        <item name="colorControlActivated">@color/blue_xd</item>
        <item name="android:textColorHighlight">@color/blue_xd</item>
    </style>

</resources>