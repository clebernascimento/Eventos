<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="layout_nav_host">
        <item name="android:name">androidx.navigation.fragment.NavHostFragment</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <!--        <item name="android:layout_marginTop">@dimen/_16sdp</item>-->
        <item name="android:background">@drawable/layout_list_body</item>
    </style>

    <style name="layout_recycler_view">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">@dimen/_8sdp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="progress_bar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">visible</item>
        <item name="android:background">@drawable/progressbar</item>
    </style>

    <style name="layout_error_list">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_margin">@dimen/_16sdp</item>
    </style>

    <style name="lottie_error">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">250dp</item>
    </style>

    <style name="text_error_list">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_24sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/blue_xd</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:text">@string/style_text_error_list</item>
    </style>

    <style name="layout_menu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">visible</item>
        <item name="android:layout_marginStart">@dimen/_16sdp</item>
        <item name="android:layout_marginTop">@dimen/_16sdp</item>
        <item name="android:layout_marginEnd">@dimen/_16sdp</item>
    </style>

    <style name="layout_home">
        <item name="android:layout_width">@dimen/_60sdp</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:visibility">visible</item>
        <item name="android:background">@drawable/layout_search</item>
    </style>

    <style name="img_home">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="layout_fav">
        <item name="android:layout_width">@dimen/_60sdp</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:background">@drawable/layout_menu_no_select</item>
    </style>

    <style name="img_favorite">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="layout_sobre">
        <item name="android:layout_width">@dimen/_60sdp</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:background">@drawable/layout_menu_no_select</item>
    </style>

    <style name="img_sobre">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="nameEvents">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/blue_xd</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="cardView">
        <item name="android:layout_width">@dimen/_250sdp</item>
        <item name="android:layout_height">@dimen/_170sdp</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:background">@color/white_xd</item>
    </style>

    <style name="linearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="dateEvents">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/_8sdp</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/blue_xd</item>
    </style>

    <style name="priceEvents">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_8sdp</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/blue_xd</item>
    </style>

    <style name="descriptionEvents">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_16sdp</item>
        <item name="android:layout_marginEnd">@dimen/_16sdp</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:layout_marginBottom">@dimen/_8sdp</item>
        <item name="android:justificationMode">inter_word</item>
        <item name="android:textColor">@color/blue_xd</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="divider4">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginBottom">@dimen/_8sdp</item>
        <item name="android:background">@color/blue_xd</item>
    </style>

    <style name="linearLayout2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_8sdp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">@dimen/_8sdp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="labelName" parent="TextInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:theme">@style/SelectionColor</item>
    </style>

    <style name="editName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:paddingStart">@dimen/_8sdp</item>
        <item name="android:textColor">@color/blue_xd</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:theme">@style/SelectionColor</item>
    </style>

    <style name="textInput_labelEmail" parent="TextInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:theme">@style/SelectionColor</item>
    </style>

    <style name="editEmail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:paddingStart">@dimen/_8sdp</item>
        <item name="android:theme">@style/SelectionColor</item>
        <item name="android:textColor">@color/blue_xd</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="btnChekin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginTop">@dimen/_16sdp</item>
        <item name="android:layout_marginBottom">@dimen/_8sdp</item>
        <item name="android:enabled">true</item>
        <item name="android:textColor">@color/bt_background_blue</item>
        <item name="android:background">@drawable/layout_buttom_checking</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="style_text_wait">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/_12sdp</item>
        <item name="android:textColor">@color/blue_xd</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:text">@string/text_ready</item>
    </style>

    <style name="style_layout_progressbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>