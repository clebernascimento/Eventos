<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="layout_nav_host">
        <item name="android:name">androidx.navigation.fragment.NavHostFragment</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
<!--        <item name="android:layout_marginTop">@dimen/_16sdp</item>-->
        <item name="android:background">@drawable/layout_list_body</item>
    </style>

    <style name="layout_recycler_view">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">@dimen/_8sdp</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="progress_bar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="layout_error_list">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">visible</item>
        <item name="android:layout_margin">@dimen/_16sdp</item>
    </style>

    <style name="lottie_error">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">250dp</item>
    </style>

    <style name="text_error_list">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_24sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/blue_xd</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="layout_menu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">visible</item>
        <item name="android:layout_marginStart">@dimen/_16sdp</item>
        <item name="android:layout_marginTop">@dimen/_16sdp</item>
        <item name="android:layout_marginEnd">@dimen/_16sdp</item>
    </style>

    <style name="layout_home">
        <item name="android:layout_width">@dimen/_60sdp</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:visibility">visible</item>
        <item name="android:background">@drawable/layout_search</item>
    </style>

    <style name="img_home">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="layout_fav">
        <item name="android:layout_width">@dimen/_60sdp</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:background">@drawable/layout_menu_no_select</item>
    </style>

    <style name="img_favorite">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="layout_sobre">
        <item name="android:layout_width">@dimen/_60sdp</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:background">@drawable/layout_menu_no_select</item>
    </style>

    <style name="img_sobre">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>